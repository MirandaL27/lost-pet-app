<div class="section-wrapper bg-secondary text-light">
    <section class="text-center">
        <h2>Welcome {{username}}!</h2>
        <a class="dashboard-link h3" href="/add/pet">Create New Pet</a>
    </section>

    {{#if pets.length}}
    <section class="p-4 pet-section-wrapper">
        <h3>Pets belonging to {{username}}:</h3>
        {{#each pets as |pet|}}
        <div class="row pet-wrapper">
            <h4 class="col-3">Name: {{pet.name}}</h4>
            <p class="col-2">Species: {{pet.species}}</p>
            {{#if pet.reported_location}}
            <p class="col-3">Last Known Location: {{pet.reported_location}}</p>
            {{else}}
            <p class="col-3">Location Unknown</p>
            {{/if}}
            <p class="col-2" >Date Created: {{format_date pet.created_at}}</p>
            <a class="col-2 dashboard-link" href="/dashboard/edit/{{pet.id}}">Edit</a>
        </div>
        {{/each}}
    </section>
    {{/if}}
</div>