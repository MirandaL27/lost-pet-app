<div class="section-wrapper bg-secondary text-light row p-2">
  <div class="login-wrapper col-lg-6 col-sm-12 p-4">
    <h2>Login:</h2>
    <form class="login-form">
      <div class="row p-2">
        <label class="col-4" for="email-login">Email:</label>
        <input class="col-8" type="text" id="email-login" />
      </div>
      <div class="row p-2">
        <label class="col-4" for="password-login">Password:</label>
        <input class="col-8" type="password" id="password-login" />
      </div>
      <div class="row p-4">
        <button type="submit">login</button>
      </div>
    </form>
  </div>

  <div class="sign-up-wrapper col-lg-6 col-sm-12 p-4">
    <h2>Sign Up:</h2>
    <form class="signup-form">
      <div class="row p-2">
        <label class="col-4" for="username-signup">username:</label>
        <input class="col-8" type="text" id="username-signup" />
      </div>
      <div class="row p-2">
        <label class="col-4" for="email-signup">email:</label>
        <input class="col-8" type="text" id="email-signup" />
      </div>
      <div class="row p-2">
        <label class="col-4" for="password-signup">password:</label>
        <input class="col-8" type="password" id="password-signup" />
      </div>
      <div class="row p-4">
        <button type="submit">signup</button>
      </div>
    </form>
  </div>
</div>


<script src="/javascript/login.js"></script>